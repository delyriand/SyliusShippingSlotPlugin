
<div class="item">
    {% set shipping_slot = slot.shippingSlotConfig|default(null) %}
    {% if shipping_slot %}
        <div class="content">
            <div class="channel">
                <span class="ui medium empty circular label channel__item" style="background-color: {{ slot.shipment.method.shippingSlotConfig.color|default('#000') }}"></span>
                <span class="channel__item">
                    {{ shipping_slot.name }}
                </span>
            </div>
        </div>
        <br />
    {% endif %}
	<div class="content">
		<div class="ui big label">
			{{ slot.timestamp|date('d-m-Y', slot.timezone) }}
			<div class="detail">
				{{ slot.timestamp|date('H:i', slot.timezone) }}
				-
				{{ slot.timestamp|date_modify("+ " ~ slot.durationRange ~ " minutes")|date('H:i', slot.timezone) }}
			</div>
		</div>
	</div>
</div>
